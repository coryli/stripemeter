{
  "name": "@stripemeter/database",
  "version": "1.0.0",
  "description": "Database layer for StripeMeter",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "migrate": "drizzle-kit push:pg",
    "generate": "drizzle-kit generate:pg",
    "studio": "drizzle-kit studio",
    "seed": "tsx src/seed.ts",
    "test": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@stripemeter/core": "workspace:*",
    "drizzle-orm": "^0.29.3",
    "postgres": "^3.4.3",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "drizzle-kit": "^0.20.12",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  }
}
