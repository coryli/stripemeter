{
  "name": "stripemeter",
  "version": "1.0.0",
  "description": "Stripe-native usage metering and cost experience platform",
  "private": true,
  "scripts": {
    "dev": "pnpm run --parallel --filter './packages/*' --filter './apps/*' dev",
    "build": "pnpm run --filter './packages/*' --filter './apps/*' build",
    "test": "pnpm run --filter './packages/*' --filter './apps/*' test",
    "test:simulator:unit": "pnpm --filter @stripemeter/pricing-lib test -- run packages/pricing-lib/src/calculators/*.test.ts",
    "test:simulator:integration": "pnpm --filter @stripemeter/pricing-lib test -- run packages/pricing-lib/src/__tests__/simulator.integration.test.ts",
    "test:simulator:performance": "pnpm --filter @stripemeter/pricing-lib test -- run packages/pricing-lib/src/__tests__/performance.test.ts",
    "test:simulator:fast": "pnpm run test:simulator:unit",
    "test:simulator:full": "pnpm run test:simulator:unit && pnpm run test:simulator:integration && pnpm run test:simulator:performance",
    "typecheck:simulator": "pnpm --filter @stripemeter/pricing-lib typecheck",
    "lint:simulator": "echo 'No dedicated linter configured for pricing-lib' && exit 0",
    "lint": "pnpm run --filter './packages/*' --filter './apps/*' lint",
    "clean": "pnpm run --filter './packages/*' --filter './apps/*' clean",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "db:migrate": "pnpm --filter @stripemeter/database migrate",
    "db:seed": "pnpm --filter @stripemeter/database seed",
    "typecheck": "tsc -b --pretty false"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "prettier": "^3.2.4",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "vitest": "^1.2.1"
  },
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}